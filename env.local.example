# WooCommerce API Configuration
# Copy this file to .env.local and fill in your actual values

# WooCommerce Store URL (e.g., http://localhost:8080 or http://localhost:80)
NEXT_PUBLIC_WC_URL=http://localhost:8080

# Next.js App URL (for image uploads - usually http://localhost:3000 in development)
NEXT_PUBLIC_URL=http://localhost:3000

# WooCommerce REST API Credentials
# Get these from: WooCommerce > Settings > Advanced > REST API
WC_CONSUMER_KEY=ck_your_consumer_key_here
WC_CONSUMER_SECRET=cs_your_consumer_secret_here

